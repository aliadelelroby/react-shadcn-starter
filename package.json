    "@eslint-react/eslint-plugin": "^1.52.3",
    "@eslint/js": "^9.32.0",
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/eslint-plugin-query": "^5.81.2",
    "@tanstack/eslint-plugin-router": "^1.129.7",
